.container
  .starter-template 
    .page-header
      %h1 Scheduled Actions
    %table.table.table-striped
      %thead
        %tr
          %td Name
          %td Group 
          %td Min
          %td Desired
          %td Max
          %td Start Time
          %td
      %tbody
        - @scheduled_actions.each do |sc|
          %tr
            %td= sc.name
            %td= sc.auto_scaling_group_name
            %td= sc.min_size
            %td= sc.desired_capacity
            %td= sc.max_size
            %td= local_time(sc.start_time)
            %td
              %a{ class: 'btn btn-default btn-xs', href: "/scheduled_actions/#{sc.name}/edit" }
                %span.glyphicon.glyphicon-edit
              %a{ class: 'btn btn-default btn-xs delete', href: "/scheduled_actions/#{sc.name}" }
                %span.glyphicon.glyphicon-remove
    %a{ class: 'btn btn-default', href: "/scheduled_actions/new" }
      %span.glyphicon.glyphicon-plus
      Create Scheduled Action
