.container
  .starter-template 
    .page-header
      %h1 Create Scheduled Action
    - form_for @scheduled_action, '/scheduled_actions', :id => 'new_sa', method: 'post', role: 'form', class: 'form-horizontal' do |f|
      = haml_template 'scheduled_actions/_form', object: @scheduled_action, locals: { f: f }
      .form-group
        %div{class: 'col-lg-offset-2 col-lg-10'}
          = f.submit "Create", class: 'btn btn-default'
