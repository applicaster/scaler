= error_messages_for @scheduled_action 
.form-group
  = f.label :name, class: 'col-lg-2 control-label'
  .col-lg-10
    = f.text_field :name, class: 'form-control'
    %p.help-block The name of this scaling action.
.form-group
  = f.label :group, class: 'col-lg-2 control-label'
  .col-lg-10
    = f.select(:group, options: groups_for_select, class: 'form-control')
    %p.help-block The name of the Auto Scaling group.
.form-group
  = f.label :desired_capacity, class: 'col-lg-2 control-label'
  .col-lg-10
    = f.text_field :desired_capacity, class: 'form-control'
    %p.help-block The number of Amazon EC2 instances that should be running in the group.
.form-group
  = f.label :start_time, class: 'col-lg-2 control-label'
  .col-lg-10
    %input{type: 'datetime', name: 'scheduled_action[start_time]',value: @scheduled_action.start_time, class: 'form-control time'}
    %p.help-block The time for this action to start.
