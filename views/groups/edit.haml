.container
  .starter-template 
    .page-header
      %h1 Edit AutoScaling Group 
    - form_for @group, '/groups', :id => 'edit_group', method: 'put', role: 'form', class: 'form-horizontal' do |f|
      = haml_template 'groups/_form', object: @group, locals: { f: f }
      .form-group
        %div{class: 'col-lg-offset-2 col-lg-10'}
          = f.submit "Update", class: 'btn btn-default'

